    def GetArray(self):
        dimension = self.GetImageDimension()
        dataSize = self.GetBufferedDataLength()
        shape = self.GetBufferedRegionSize()
        cdef numpy.npy_intp* cshape = <numpy.npy_intp*>malloc(dimension*sizeof(numpy.npy_intp))
        cdef int i
        for 0 <= i < dimension:
            cshape[i] = shape[i]
        cdef void* dataptr = malloc(dataSize*sizeof(@CYITK_PIXEL_TYPE@))
        memcpy(dataptr,self.thisptr.GetBufferPointer(),dataSize*sizeof(@CYITK_PIXEL_TYPE@*))
        arr = numpy.PyArray_SimpleNewFromData(dimension,cshape,TypenumMap["@CYITK_PIXEL_TYPE@"],<void*>dataptr)
        return arr

    def SetDataFromArray(self,arr):
        if numpy.PyArray_NDIM(arr) != self.GetImageDimension():
            #TODO: throw exception?
            print 'Error: Cannot copy data from array with non-matching dimensionality'
            return
        if not (<object>arr).flags["C_CONTIGUOUS"]: 
            arr = arr.copy('C') 
        dtype = numpy.PyArray_DescrFromType(TypenumMap["@CYITK_PIXEL_TYPE@"])
        if arr.dtype != dtype:
            arr = arr.astype(dtype)
        self.thisptr.SetData(<int *>numpy.PyArray_DIMS(arr),<@CYITK_PIXEL_TYPE@ *>numpy.PyArray_DATA(arr))


